  { "id": "bennu", "name": "Bennu", "diameter_km": 0.49, "typical_velocity_km_s": 28, "composition": "carbonaceous" },
  { "id": "didymos", "name": "Didymos", "diameter_km": 0.78, "typical_velocity_km_s": 25, "composition": "stony-metallic" },
  { "id": "ganymed", "name": "Ganymed", "diameter_km": 32.0, "typical_velocity_km_s": 15, "composition": "stony-iron" },
  { "id": "eris", "name": "Eris", "diameter_km": 2326, "typical_velocity_km_s": 5, "composition": "ice-rich" },
  { "id": "vesta", "name": "Vesta", "diameter_km": 525.4, "typical_velocity_km_s": 20, "composition": "stony" },
  { "id": "pallas", "name": "Pallas", "diameter_km": 512, "typical_velocity_km_s": 18, "composition": "stony" },
